@model AdditionalData

<div class="container">
    <div class="sub-container">
         <div class="form-group col-md-offset-3 col-md-5">
            <h2>Sunrise&Sunset data for the selected city</h2>

            <label asp-for="@Model.Date"></label>
            <span>@Model.Date</span>
            <br />

            <label asp-for="@Model.Sunrise"></label>
            <span>@Model.Sunrise °C</span>
            <br />

            <label asp-for="@Model.Sunset"></label>
            <span>@Model.Sunset</span>
            <br />

            <label asp-for="@Model.FirstLight"></label>
            <span>@Model.FirstLight</span>
            <br />

            <label asp-for="@Model.LastLight"></label>
            <span>@Model.LastLight</span>
            <br />

            <label asp-for="@Model.Dawn"></label>
            <span>@Model.Dawn</span>
            <br />

            <label asp-for="@Model.Dusk"></label>
            <span>@Model.Dusk</span>
            <br />

            <label asp-for="@Model.SolarNoon"></label>
            <span>@Model.SolarNoon</span>
            <br />

            <label asp-for="@Model.GoldenHour"></label>
            <span>@Model.GoldenHour</span>
            <br />

            <label asp-for="@Model.DayLength"></label>
            <span>@Model.DayLength</span>
            <br />

            <label asp-for="@Model.Timezone"></label>
            <span>@Model.Timezone</span>
        </div>
    </div>
    
    <div class="sub-container">
        <div class="form-group col-md-offset-3 col-md-5">

            <form method="get">
                <button asp-controller="Forecast" asp-action="SearchCity" class="btn btn-success">Return</button>
            </form>
        </div>
    </div>


</div>