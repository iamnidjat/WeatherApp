@using WeatherApp.Models
@model City

@*@{
    ViewData["Title"] = "City";
}*@

<div class="container">

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <h2>Forecast for the selected city</h2>

            <label asp-for="Name"></label>
            <span>@Model.Name</span>
            <br />

            <label asp-for="Temp"></label>
            <span>@Model.Temp °C</span>
            <br />

            <label asp-for="Humidity"></label>
            <span>@Model.Humidity %</span>
            <br />

            <label asp-for="Pressure"></label>
            <span>@Model.Pressure Hpa</span>
            <br />

            <label asp-for="Wind"></label>
            <span>@Model.Wind Km/h</span>
            <br />

            <label asp-for="Weather"></label>
            <span>@Model.Weather</span>

        </div>

    </div>

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <form method="get">
                <button asp-controller="Forecast" asp-action="SearchCity" class="btn btn-success">Return</button>
            </form>

        </div>

    </div>

</div>