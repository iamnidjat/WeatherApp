@using WeatherApp.ViewModels
@model CompositeSearchModel

<div class="container">
    @if (Model.City != null)
    {
        <div class="sub-container">

            <div class="form-group col-md-offset-3 col-md-5">

                <h2>Forecast for the selected city</h2>

                <label asp-for="@Model.City.Name"></label>
                <span>@Model.City.Name</span>
                <br />

                <label asp-for="@Model.City.Temp"></label>
                <span>@Model.City.Temp °C</span>
                <br />

                <label asp-for="@Model.City.Humidity"></label>
                <span>@Model.City.Humidity %</span>
                <br />

                <label asp-for="@Model.City.Pressure"></label>
                <span>@Model.City.Pressure Hpa</span>
                <br />

                <label asp-for="@Model.City.Wind"></label>
                <span>@Model.City.Wind Km/h</span>
                <br />

                <label asp-for="@Model.City.Weather"></label>
                <span>@Model.City.Weather</span>
                <br />

                <label asp-for="@Model.City.WeatherIcon"></label>
                <span><img src="@Model.City.WeatherIcon" title="Weather Icon" /></span>
            </div>

        </div>
    }
    else if (Model.NotFoundModel != null)
    {
    <div class="container">
        <div class="alert alert-danger" role="alert">
            @Model.NotFoundModel.ErrorMessage
        </div>
    </div>
    }

    <div class="sub-container">

        <div class="form-group col-md-offset-3 col-md-5">

            <form method="get">
                <button asp-controller="Forecast" asp-action="SearchCity" class="btn btn-success">Return</button>
            </form>

        </div>

    </div>

</div>